{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "allowJs": true,
    "types": ["node"],
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "inlineSources": true
  },
  "include": ["src/**/*", "src/**/*.*"],
  "exclude": ["node_modules"]
}
